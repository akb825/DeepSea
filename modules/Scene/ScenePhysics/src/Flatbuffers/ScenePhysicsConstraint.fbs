namespace DeepSeaScenePhysics;

// Struct describing a constraint within a scene.
table ScenePhysicsConstraint
{
	// The constraint.
	constraint : [ubyte] (required);

	// The instance name for the first rigid body. If set, it search in a parent PhysicsGroupNode.
	firstRigidBodyInstance : string;

	// The instance name for the first connected constraint. If set, it search in a parent
	// PhysicsGroupNode.
	firstConnectedConstraintInstance: string;

	// The instance name for the second rigid body. If set, it search in a parent PhysicsGroupNode.
	secondRigidBodyInstance : string;

	// The instance name for the second connected constraint. If set, it search in a parent
	// PhysicsGroupNode.
	secondConnectedConstraintInstance : string;
}

root_type ScenePhysicsConstraint;
