include "DeepSea/Scene/Flatbuffers/SceneCommon.fbs";

namespace DeepSeaScene;

// Struct containing children to add to an existing transform node.
table TransformNodeChildren
{
	// The name of the transform node to add children to.
	node : string (required);

	// The child nodes for the transform.
	children : [ObjectData] (required);
}

root_type TransformNodeChildren;
