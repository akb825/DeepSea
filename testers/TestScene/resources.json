[
	{
		"type": "Texture",
		"name": "SimpleTexture",
		"path": "@sharedDir@/SimpleTexture.png",
		"textureInfo":
		{
			"format": "@textureFormat@",
			"decoration": "@textureDecoration@",
			"mipLevels": 1000
		}
	},
	{
		"type": "ShaderVariableGroupDesc",
		"name": "viewTransformDesc",
		"elements":
		[
			{"name": "view", "type": "Mat4"},
			{"name": "camera", "type": "Mat4"},
			{"name": "projection", "type": "Mat4"},
			{"name": "viewProjection", "type": "Mat4"},
			{"name": "screenRotation", "type": "Vec4"},
			{"name": "screenSize", "type": "IVec2"}
		]
	},
	{
		"type": "ShaderVariableGroupDesc",
		"name": "instanceTransformDesc",
		"elements":
		[
			{"name": "world", "type": "Mat4"},
			{"name": "worldView", "type": "Mat4"},
			{"name": "worldViewInvTrans", "type": "Mat4"},
			{"name": "worldViewProj", "type": "Mat4"}
		]
	},
	{
		"type": "ShaderVariableGroupDesc",
		"name": "lightDesc",
		"elements":
		[
			{"name": "direction", "type": "Vec3"},
			{"name": "color", "type": "Vec3"},
			{"name": "ambient", "type": "Vec3"}
		]
	},
	{
		"type": "MaterialDesc",
		"name": "cubeDesc",
		"elements":
		[
			{
				"name": "ViewTransformData",
				"type": "VariableGroup",
				"binding": "Global",
				"shaderVariableGroupDesc": "viewTransformDesc"
			},
			{
				"name": "InstanceTransformData",
				"type": "VariableGroup",
				"binding": "Instance",
				"shaderVariableGroupDesc": "instanceTransformDesc"
			},
			{
				"name": "LightData",
				"type": "VariableGroup",
				"binding": "Global",
				"shaderVariableGroupDesc": "lightDesc"
			},
			{
				"name": "materialColor",
				"type": "Vec4",
				"binding": "Material"
			}
		]
	},
	{
		"type": "MaterialDesc",
		"name": "groundDesc",
		"elements":
		[
			{
				"name": "ViewTransformData",
				"type": "VariableGroup",
				"binding": "Global",
				"shaderVariableGroupDesc": "viewTransformDesc"
			},
			{
				"name": "InstanceTransformData",
				"type": "VariableGroup",
				"binding": "Instance",
				"shaderVariableGroupDesc": "instanceTransformDesc"
			},
			{
				"name": "LightData",
				"type": "VariableGroup",
				"binding": "Global",
				"shaderVariableGroupDesc": "lightDesc"
			},
			{
				"name": "diffuseTex",
				"type": "Texture",
				"binding": "Material"
			}
		]
	},
	{
		"type": "Material",
		"name": "innerCubeMat",
		"description": "cubeDesc",
		"data":
		[
			{
				"name": "materialColor",
				"type": "Vec4",
				"data": [1.0, 0.0, 0.0, 1.0]
			}
		]
	},
	{
		"type": "Material",
		"name": "outerCubeMat",
		"description": "cubeDesc",
		"data":
		[
			{
				"name": "materialColor",
				"type": "Vec4",
				"data": [0.0, 1.0, 0.0, 1.0]
			}
		]
	},
	{
		"type": "Material",
		"name": "groundMat",
		"description": "groundDesc",
		"data":
		[
			{
				"name": "diffuseTex",
				"type": "Texture",
				"data": "SimpleTexture"
			}
		]
	},
	{
		"type": "ShaderModule",
		"name": "testSceneModule",
		"modules": @testSceneModule@
	},
	{
		"type": "Shader",
		"name": "cubeShader",
		"module": "testSceneModule",
		"pipeline": "Cube",
		"materialDesc": "cubeDesc"
	},
	{
		"type": "Shader",
		"name": "groundShader",
		"module": "testSceneModule",
		"pipeline": "Ground",
		"materialDesc": "groundDesc"
	},
	{
		"type": "SceneNode",
		"name": "cubeModelNode",
		"nodeType": "ModelNode",
		"modelGeometry":
		[
			{
				"path": "@srcDir@/cube.obj",
				"vertexFormat":
				[
					[
						{
							"attrib": "Position",
							"format": "X32Y32Z32",
							"decoration": "Float"
						},
						{
							"attrib": "Normal",
							"format": "W2Z10Y10X10",
							"decoration": "UNorm"
						}
					]
				],
				"indexSize": 2,
				"transforms":
				[
					{
						"attrib": "Normal",
						"transform": "SNormToUNorm"
					}
				],
				"drawInfos":
				[
					{
						"name": "Cube",
						"shader": "cubeShader",
						"material": "innerCubeMat",
						"modelList": "modelList"
					}
				]
			}
		],
		"extraItemLists": ["cullList"]
	},
	{
		"type": "SceneNode",
		"name": "innerOuterCubeNode",
		"nodeType": "TransformNode",
		"transformList": [{"type": "Scale", "value": [2.0, 2.0, 2.0]}],
		"children":
		[
			{"nodeType": "ReferenceNode", "ref": "cubeModelNode"},
			{
				"nodeType": "TransformNode",
				"transformList":
				[
					{"type": "Translate", "value": [4.0, -1.0, 3.0]},
					{"type": "Rotate", "value": [20.0, -40.0, 60.0]},
					{"type": "Scale", "value": [1.5, 0.75, 0.5]}
				],
				"children":
				[
					{
						"nodeType": "ModelNodeRemap",
						"baseName": "cubeModelNode",
						"materialRemaps":
						[
							{"name": "Cube", "material": "outerCubeMat"}
						]
					}
				]
			}
		]
	},
	{
		"type": "SceneNode",
		"name": "groundNode",
		"nodeType": "TransformNode",
		"transformList":
		[
			{"type": "Scale", "value": [10.0, 1.0, 10.0]},
			{"type": "Translate", "value": [0.0, -5.0, 0.0]}
		],
		"children":
		[
			{
				"nodeType": "ModelNode",
				"modelGeometry":
				[
					{
						"path": "@srcDir@/ground.gltf",
						"vertexFormat":
						[
							[
								{
									"attrib": "Position",
									"format": "X32Y32Z32",
									"decoration": "Float"
								},
								{
									"attrib": "Normal",
									"format": "W2Z10Y10X10",
									"decoration": "UNorm"
								},
								{
									"attrib": "TexCoord0",
									"format": "X16Y16",
									"decoration": "UNorm"
								}
							]
						],
						"indexSize": 2,
						"transforms":
						[
							{
								"attrib": "Normal",
								"transform": "SNormToUNorm"
							}
						],
						"drawInfos":
						[
							{
								"name": "Plane",
								"shader": "groundShader",
								"material": "groundMat",
								"modelList": "modelList"
							}
						]
					}
				],
				"extraItemLists": ["cullList"]
			}
		]
	},
	{
		"type": "SceneNode",
		"name": "secondaryTransform",
		"nodeType": "TransformNode",
		"children":
		[
			{
			"nodeType": "TransformNode",
				"transformList":
				[
					{"type": "Rotate", "value": [-20.0, 70.0, 35.0]},
					{"type": "Translate", "value": [5.0, 4.0, -2.0]}
				],
				"children": [{"nodeType": "ReferenceNode", "ref": "innerOuterCubeNode"}]
			}
		]
	},
	{
		"type": "SceneNode",
		"name": "primaryTransform",
		"nodeType": "TransformNode",
		"children":
		[
			{"nodeType": "ReferenceNode", "ref": "innerOuterCubeNode"},
			{"nodeType": "ReferenceNode", "ref": "secondaryTransform"}
		]
	}
]
