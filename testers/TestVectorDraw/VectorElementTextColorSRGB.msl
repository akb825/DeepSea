#if HAS_TESSELLATION_STAGES && 0
#include <DeepSea/VectorDraw/Shaders/VectorElementTessTextColor.mslh>
#else
#include <DeepSea/VectorDraw/Shaders/VectorElementTextColor.mslh>
#endif

pipeline dsVectorTextColor
{
	vertex = dsVectorElementText_defaultVertexColor;
#if HAS_TESSELLATION_STAGES && 0
	tessellation_control = dsVectorElementText_defaultTessControlColor;
	tessellation_evaluation = dsVectorElementText_defaultTessEvalColor;
#endif
	fragment = dsVectorElementText_defaultFragmentColorSRGB;
	DS_DEFAULT_VECTOR_ELEMENT_TEXT_RENDER_STATES;
}

pipeline dsVectorTextColorOutline
{
	vertex = dsVectorElementText_defaultVertexColor;
#if HAS_TESSELLATION_STAGES && 0
	tessellation_control = dsVectorElementText_defaultTessControlColor;
	tessellation_evaluation = dsVectorElementText_defaultTessEvalColor;
#endif
	fragment = dsVectorElementText_defaultFragmentColorOutlineSRGB;
	DS_DEFAULT_VECTOR_ELEMENT_TEXT_RENDER_STATES;
}
