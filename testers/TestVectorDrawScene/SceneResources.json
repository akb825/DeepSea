{
	"shaderVariableGroupDescs":
	[
		{
			"name": "viewTransformDesc",
			"elements":
			[
				{"name": "view", "type": "Mat4"},
				{"name": "camera", "type": "Mat4"},
				{"name": "projection", "type": "Mat4"},
				{"name": "screenRotation", "type": "Vec4"},
				{"name": "screenSize", "type": "IVec2"}
			]
		},
		{
			"name": "instanceTransformDesc",
			"elements":
			[
				{"name": "world", "type": "Mat4"},
				{"name": "worldInvTrans", "type": "Mat4"},
				{"name": "worldView", "type": "Mat4"},
				{"name": "worldViewProj", "type": "Mat4"}
			]
		}
	],
	"materialDescs":
	[
		{
			"name": "textMaterialDesc",
			"elements":
			[
				{
					"name": "ViewTransformData",
					"type": "VariableGroup",
					"binding": "Global",
					"shaderVariableGroupDesc": "viewTransformDesc"
				},
				{
					"name": "InstanceTransformData",
					"type": "VariableGroup",
					"binding": "Instance",
					"shaderVariableGroupDesc": "instanceTransformDesc"
				},
				{
					"name": "fontTex",
					"type": "Texture",
					"binding": "Instance"
				}
			]
		}
	],
	"customResources":
	[
		{
			"type": "VectorResources",
			"name": "resources",
			"data":
			{
				"resources": "@assetsDir@/VectorResources.dsvr",
				"output": "@assetsDir@/VectorResources.dsvr",
				"outputRelativeDir": "@assetsDir@"
			}
		},
		{
			"type": "VectorShaders",
			"name": "vectorShaders",
			"data":
			{
				"modules": @vectorModule@,
				"materialDescName": "vectorMaterialDesc",
				"extraElements":
				[
					{
						"name": "ViewTransformData",
						"type": "VariableGroup",
						"binding": "Global",
						"shaderVariableGroupDesc": "viewTransformDesc"
					}
				]
			}
		},
		{
			"type": "VectorImage",
			"name": "tiger",
			"data":
			{
				"image": "@assetsDir@/Ghostscript_Tiger.dsvi",
				"vectorShaders": "vectorShaders",
				"targetSize": [150, 150]
			}
		},
		{
			"type": "Text",
			"name": "figure",
			"data":
			{
				"vectorResources": "resources",
				"font": "sans-serif",
				"text": "<text font-size=\"16\" fill=\"black\"><tspan font-style=\"italic\">Figure ${tigerNum}:</tspan> an SVG tiger.</text>"
			}
		}
	],
	"materials":
	[
		{
			"name": "vectorMat",
			"description": "vectorMaterialDesc"
		},
		{
			"name": "textMat",
			"description": "textMaterialDesc"
		}
	],
	"shaderModules":
	[
		{

			"name": "textModule",
			"modules": @textModule@
		}
	],
	"shaders":
	[
		{
			"name": "textShader",
			"module": "textModule",
			"pipelineName": "Text",
			"materialDesc": "textMaterialDesc"
		}
	],
	"sceneNodes":
	[
		{
			"type": "TransformNode",
			"name": "tigerTransform",
			"data":
			{
				"transformList":
				[
					{
						"type": "Translate",
						"value": [-75, -60, 0]
					}
				],
				"children":
				[
					{
						"type": "VectorImageNode",
						"data":
						{
							"vectorImage": "tiger",
							"vectorShaders": "vectorShaders",
							"material": "vectorMat",
							"size": [150, 150],
							"z": 0,
							"itemLists": ["vectorPrepareList", "vectorItemList"]
						}
					}
				]
			}
		},
		{
			"type": "TextNode",
			"name": "figureNode",
			"data":
			{
				"text": "figure",
				"alignment": "Center",
				"maxWidth": 100,
				"lineScale": 1.2,
				"shader": "textShader",
				"material": "textMat",
				"fontTextureName": "fontTex",
				"z": 1,
				"itemLists": ["vectorPrepareList", "vectorItemList"]
			}
		},
		{
			"type": "TransformNode",
			"name": "figureTransform",
			"data":
			{
				"transformList":
				[
					{
						"type": "Translate",
						"value": [0, -76, 0] 
					}
				],
				"children":
				[
					{"type": "ReferenceNode", "data": "figureNode"}
				]
			}
		}
	]
}
