[
	{
		"type": "ShaderVariableGroupDesc",
		"name": "viewTransformDesc",
		"elements":
		[
			{"name": "view", "type": "Mat4"},
			{"name": "camera", "type": "Mat4"},
			{"name": "projection", "type": "Mat4"},
			{"name": "viewProjection", "type": "Mat4"},
			{"name": "projectionInv", "type": "Mat4"},
			{"name": "screenProjection", "type": "Mat4"},
			{"name": "screenProjectionInv", "type": "Mat4"},
			{"name": "framebufferRotation", "type": "Vec4"},
			{"name": "clipSpaceTexCoordTransform", "type": "Vec3", "count": 2},
			{"name": "framebufferSize", "type": "IVec2"},
			{"name": "screenSize", "type": "Vec2"}
		]
	},
	{
		"type": "ShaderVariableGroupDesc",
		"name": "instanceScreenTransformDesc",
		"elements":
		[
			{"name": "world", "type": "Mat4"},
			{"name": "worldProj", "type": "Mat4"}
		]
	},
	{
		"type": "MaterialDesc",
		"name": "textMaterialDesc",
		"elements":
		[
			{
				"name": "dsViewTransformData",
				"type": "VariableGroup",
				"binding": "Global",
				"shaderVariableGroupDesc": "viewTransformDesc"
			},
			{
				"name": "dsInstanceScreenTransformData",
				"type": "VariableGroup",
				"binding": "Instance",
				"shaderVariableGroupDesc": "instanceScreenTransformDesc"
			},
			{
				"name": "dsFontTex",
				"type": "Texture",
				"binding": "Instance"
			}
		]
	},
	{
		"type": "VectorShaders",
		"name": "vectorShaders",
		"modules": @vectorModule@,
		"materialDesc": "vectorMaterialDesc",
		"extraElements":
		[
			{
				"name": "dsViewTransformData",
				"type": "VariableGroup",
				"binding": "Global",
				"shaderVariableGroupDesc": "viewTransformDesc"
			}
		]
	},
	{
		"type": "VectorResources",
		"name": "resources",
		"resources":
		[
			{
				"type": "FaceGroup",
				"name": "default",
				"faces":
				[
					{
						"name": "sans",
						"path": "../Shared/Fonts/NotoSans-Regular.ttc"
					}
				]
			},
			{
				"type": "VectorImage",
				"path": "../Shared/Icons/SVGs/one.svg",
				"targetSize": [32, 32]
			},
			{
				"type": "VectorImage",
				"path": "../Shared/Icons/SVGs/cat.svg",
				"targetSize": [32, 32]
			},
			{
				"type": "VectorTextIcons",
				"name": "icons",
				"icons":
				[
					[
						{
							"codepoint": 49,
							"icon": "one",
							"advance": 0.8,
							"bounds": [[-0.2, -0.2], [1.0, 1.0]]
						}
					],
					[
						{
							"codepoint": "0x1F431",
							"icon": "cat",
							"advance": 0.8,
							"bounds": [[-0.2, -0.2], [1.0, 1.0]]
						}
					]
				]
			},
			{
				"type": "Font",
				"name": "sans-serif",
				"faceGroup": "default",
				"faces": ["sans"],
				"icons": "icons",
				"quality": "high"
			}
		],
		"output": "VectorResources.dsvr",
		"vectorShaders": "vectorShaders"
	},
	{
		"type": "VectorImage",
		"name": "tiger",
		"image": "Ghostscript_Tiger.svg",
		"vectorShaders": "vectorShaders",
		"targetSize": [75, 75]
	},
	{
		"type": "Text",
		"name": "figure",
		"vectorResources": "resources",
		"font": "sans-serif",
		"text": "<text font-size=\"8\" fill=\"black\"><tspan font-style=\"italic\">Figure ${tigerNum}:</tspan> an SVG tiger. üê±</text>"
	},
	{
		"type": "ShaderModule",
		"name": "textModule",
		"modules": @textModule@
	},
	{
		"type": "Shader",
		"name": "textShader",
		"module": "textModule",
		"pipeline": "Text",
		"materialDesc": "textMaterialDesc"
	},
	{
		"type": "SceneNode",
		"nodeType": "TextNode",
		"name": "figureNode",
		"text": "figure",
		"alignment": "Center",
		"maxWidth": 50,
		"lineScale": 1.2,
		"shader": "textShader",
		"z": 1,
		"itemLists": ["vectorDrawPrepare", "vectorItemList"]
	},
	{
		"type": "SceneNode",
		"nodeType": "TransformNode",
		"name": "rootNode",
		"transformList":
		[
			{
				"type": "Translate",
				"value": [50, 0, 0]
			}
		],
		"children":
		[
			{
				"nodeType": "TransformNode",
				"transformList":
				[
					{
						"type": "Translate",
						"value": [-37.5, 20, 0]
					}
				],
				"children":
				[
					{
						"nodeType": "VectorImageNode",
						"vectorImage": "tiger",
						"vectorShaders": "vectorShaders",
						"size": [75, 75],
						"z": 0,
						"itemLists": ["vectorDrawPrepare", "vectorItemList"]
					}
				]
			},
			{
				"nodeType": "TransformNode",
				"transformList":
				[
					{
						"type": "Translate",
						"value": [0, 12, 0]
					}
				],
				"children":
				[
					{"nodeType": "ReferenceNode", "ref": "figureNode"}
				]
			}
		]
	}
]
